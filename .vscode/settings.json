{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.enable": true,
    "eslint.format.enable": true,
    "files.insertFinalNewline": true,
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown",
        "graphql"
    ],
    "eslint.debug": true,
    "[graphql]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
}
